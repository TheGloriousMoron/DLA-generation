{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Program (Windows - MSVC)",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe${workspaceFolder}\\build\\dla_generation.exe",  // Output to build directory
                "${workspaceFolder}\\src\\main.c",
                "${workspaceFolder}\\src\\dla.c",
                "${workspaceFolder}\\src\\image.c",
                "${workspaceFolder}\\src\\_math.c",
                "${workspaceFolder}\\src\\log.c",
                "${workspaceFolder}\\include\\lodepng\\lodepng.c",
                "/I${workspaceFolder}/include"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\build"  // Ensure build directory is used
            },
            "detail": "Build using MSVC (cl.exe)",
        },
        {
            "label": "Build C Program (Linux - GCC)",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/dla.c",
                "${workspaceFolder}/src/image.c",
                "${workspaceFolder}/src/_math.c",
                "${workspaceFolder}/src/log.c",
                "${workspaceFolder}/include/lodepng/lodepng.c",
                "-I${workspaceFolder}/include/",
                "-o",
                "${workspaceFolder}/build/dla_generation"  // Output to build directory
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"  // Ensure build directory is used
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build using GCC (Linux)",
        }
    ]
}
